#!/usr/bin/env php
<?php

/**
 * @param  string $item
 * @param  string $ext
 * @return string
 */
function concat(string $item, string $ext)
{
    return sprintf('- [%s](src/%s/%s)', str_replace('.' . $ext, '', ucwords(str_replace('-', ' ', preg_replace('/\d+-/', '', basename($item))))), $ext, basename($item));
}

$data = [];

foreach (glob(__DIR__ . '/../src/*', GLOB_ONLYDIR) as $dir) {
    $sources = glob($dir . '/*.*');
    $ext = pathinfo($sources[0], PATHINFO_EXTENSION);

    natsort($sources);

    $data[$ext] = $sources;
}

$result = '# LeetCode' . PHP_EOL;

foreach ($data as $ext => $items) {
    $result .= PHP_EOL . '### ' . strtoupper($ext) . PHP_EOL;

    foreach ($items as $item) {
        $result .= concat($item, $ext) . PHP_EOL;
    }
}

file_put_contents(__DIR__ . '/../README.md', $result);
